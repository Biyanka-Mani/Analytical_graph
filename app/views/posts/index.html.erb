<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<% if current_user&.is_admin? %>
    <%= area_chart @posts.total_view_by_day,colors:["#a00a"]  %>
  <% end %>



<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
